mt()
	margin-top: arguments
mb()
	margin-bottom: arguments
mr()
	margin-right: arguments
ml()
	margin-left: arguments

pt()
	padding-top: arguments
pb()
	padding-bottom: arguments
pr()
	padding-right: arguments
pl()
	padding-left: arguments

bt()
	border-top: arguments
bb()
	border-bottom: arguments
br()
	border-right: arguments
bl()
	border-left: arguments

minSize(widht, height)
	min-width: widht
	min-height: height
maxSize(widht, height)
	max-width: widht
	max-height: height

icon($name)
	background-image: url("../icons/"$name)
	size: width($name) height($name)
iconB($name)
	position: relative
	&:before
		content: ""
		position: absolute
		icon($name)
iconA($name)
	position: relative
	&:after
		content: ""
		position: absolute
		icon($name)

baa()
	position: relative
	&:before
	&:after
		content: ''
		position: absolute

ls()
	letter-spacing: (arguments / 1000)em

lh()
	line-height: arguments

fz()
	font-size: arguments

ffa()
	font-family: arguments

fw()
	font-weight: arguments

txtd()
	text-decoration: arguments

txta()
	text-align: arguments

txtt()
	text-transform: arguments
	
c()
	color: arguments

bgc()
	background-color: arguments